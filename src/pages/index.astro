---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import getSortedPosts from "@utils/getSortedPosts";
import { SOCIALS } from "@config";
import Hero from "@components/Hero.astro";
import Cta from "@components/Cta.astro";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout>
  <Header />

  <Hero />

  <section class="services w-full min-w-full bg-[#ffffff]">
    <div class="mx-auto w-full max-w-[916px] px-4 py-16">
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
        {/* Left Column */}
        <div class="flex flex-col justify-start">
          <h2 class="mb-6 font-domine text-2xl font-normal text-[#0D2B46]">
            Our Services
          </h2>
          <div class="flex flex-col space-y-6 bg-[#F6F6F6] p-6">
            <div class="border-b border-gray-200 pb-4">
              <h3 class="text-lg font-medium text-[#0D2B46]">
                Management Consulting
              </h3>
            </div>
            <div class="border-b border-gray-200 pb-4">
              <h3 class="text-lg font-medium text-[#0D2B46]">
                Software Development
              </h3>
            </div>
            <div class="border-b border-gray-200 pb-4">
              <h3 class="text-lg font-medium text-[#0D2B46]">
                Data Integration
              </h3>
            </div>
            <div class="pb-4">
              <h3 class="text-lg font-medium text-[#0D2B46]">DevOps & Cloud</h3>
            </div>
          </div>
        </div>

        {/* Right Column - Services Image */}
        <div class="flex items-center justify-center">
          <Image
            src="/assets/services1.svg"
            alt="Our Services Illustration"
            width={500}
            height={500}
            class="h-auto w-full"
          />
        </div>
      </div>
    </div>
  </section>

  <main id="main-content">
    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pb-6 pt-12">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(({ data, slug }) => (
                <Card
                  href={`/posts/${slug}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pb-6 pt-12">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              ({ data, slug }, index) =>
                index < 4 && (
                  <Card
                    href={`/posts/${slug}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>
  </main>

  <Cta />

  <Footer />
</Layout>
