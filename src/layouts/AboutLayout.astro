---
import { SITE } from "@config";
import { Image } from "astro:assets";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "./Layout.astro";
import Cta from "@components/Cta.astro";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header activeNav="about" />

  <Breadcrumbs />

  <section class="mt-16 w-full min-w-full">
    <div class="mx-auto w-full max-w-[916px] px-4 py-16">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
        <div class="col-span-2">
          <div
            class="mb-3 font-['Open_Sans'] text-[18px] font-normal leading-[200%] text-[#0D2B46]"
          >
            <h2
              class="mb-6 font-domine text-[36px] font-normal leading-normal text-[#0D2B46]"
            >
              {frontmatter.title}
            </h2>

            <div
              class="font-['Open_Sans'] text-[14px] font-normal leading-[200%] text-[#0D2B46]"
            >
              <slot />
            </div>
          </div>
        </div>

        <div class="col-span-1 grid place-items-center">
          <Image
            src="/src/assets/images/about-us.svg"
            alt="About IdeaCrew"
            width={300}
            height={192}
            loading="eager"
            priority
          />
        </div>
      </div>
    </div>

    <Cta />

    <Footer />
  </section>
</Layout>
