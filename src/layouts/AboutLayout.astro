---
import { Image } from "astro:assets";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Layout from "./Layout.astro";
import Cta from "@/components/Cta.astro";
import Careers from "@/components/Careers.astro";
import Values from "@/components/Values.astro";
import Leadership from "@/components/Leadership.astro";
import { getImageFromPath } from "@/utils/images";
import { Button } from "@/components/ui/button";

import { getEntry } from "astro:content";
const siteConfig = await getEntry("site", "config");
const SITE = siteConfig!.data;

export interface Props {
  frontmatter: {
    seo: {
      title: string;
      description?: string;
    };
    hero: {
      title: string;
      description: string;
      image?: {
        src: string;
        alt: string;
      };
    };
    cbe: {
      visible: boolean;
      text: string;
      image: {
        src: string;
        alt: string;
      };
    };
    services: {
      name: string;
      icon: {
        src: string;
      };
      items: string[];
    }[];
    careers: {
      title: string;
      description: string;
      image: {
        src: string;
        alt: string;
      };
      button: {
        href: string;
        text: string;
      };
    };
    philanthropy: {
      title: string;
      description: string;
      button: {
        href: string;
        text: string;
      };
    };
    values: {
      title: string;
      items: {
        title: string;
        description: string;
      }[];
    };
    leadership: {
      title: string;
    };
  };
}

const { frontmatter } = Astro.props;
---

<Layout
  title={frontmatter.seo.title
    ? `${frontmatter.seo.title} | ${SITE.siteName}`
    : SITE.siteName}
  description={frontmatter.seo.description || SITE.description}
>
  <Header activeNav="about" />

  <Breadcrumbs />

  <main id="main-content">
    <section class="w-full min-w-full">
      <div class="mx-auto w-full max-w-[960px] px-4 py-16">
        <div class="mb-6 grid grid-cols-1 gap-6 sm:grid-cols-3">
          <div class="col-span-2">
            <div
              class="mb-3 font-sans text-[18px] leading-[200%] font-normal text-[#0D2B46]"
            >
              <h2
                class="font-domine mb-6 text-[36px] leading-normal font-normal text-[#0D2B46]"
              >
                {frontmatter.hero.title}
              </h2>

              <div
                class="font-sans text-[14px] leading-[200%] font-normal text-[#0D2B46]"
              >
                {frontmatter.hero.description}
              </div>
            </div>
          </div>

          <div class="col-span-1 grid place-items-center">
            {
              frontmatter.hero.image && (
                <Image
                  src={getImageFromPath(frontmatter.hero.image.src)}
                  alt={frontmatter.hero.image.alt}
                  width={300}
                  height={192}
                  loading="eager"
                />
              )
            }
          </div>
        </div>

        {
          frontmatter.cbe.visible && (
            <div class="cbe mx-auto w-full max-w-[500px] rounded-2xl border border-[#E5E7EB] bg-white p-4 shadow-sm md:mx-0">
              <div class="flex items-center gap-4">
                {frontmatter.cbe.image && (
                  <Image
                    src={getImageFromPath(frontmatter.cbe.image.src)}
                    alt={frontmatter.cbe.image.alt}
                    width={120}
                    height={96}
                    loading="eager"
                  />
                )}

                <p class="font-sans text-[14px] leading-[150%] font-semibold text-[#0D2B46]">
                  {frontmatter.cbe.text}
                </p>
              </div>
            </div>
          )
        }
      </div>
    </section>

    <section class="w-full min-w-full bg-[#F6F6F6]">
      <div class="mx-auto w-full max-w-[960px] px-4 py-8">
        <h2
          class="font-domine mb-8 text-[24px] leading-normal font-normal text-[#0D2B46]"
        >
          Our Services
        </h2>

        <div class="grid grid-cols-1 gap-8 sm:grid-cols-4">
          {
            frontmatter.services.map(service => (
              <div class="flex flex-col">
                <div class="mb-6 h-24 w-24 pl-2">
                  <Image
                    src={getImageFromPath(service.icon.src)}
                    alt={`${service.name} Icon`}
                    width={82}
                    height={82}
                    class="h-full w-full"
                  />
                </div>

                <h3 class="mb-4 font-sans text-[16px] leading-[200%] font-semibold text-[#0D2B46]">
                  {service.name}
                </h3>
                <ul class="space-y-2 font-sans text-[14px] leading-[150%] font-normal text-[#0D2B46]">
                  {service.items.map(item => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <section class="w-full min-w-full">
      <div class="mx-auto w-full max-w-[960px] px-4 py-8">
        <h2
          class="font-domine mb-8 text-[24px] leading-normal font-normal text-[#0D2B46]"
        >
          {frontmatter.philanthropy.title}
        </h2>

        <p
          class="font-sans text-[14px] leading-[200%] font-normal text-[#0D2B46]"
        >
          {frontmatter.philanthropy.description}
        </p>

        <div class="mt-6">
          <Button variant="link" className="max-w-full">
            <a
              href={frontmatter.philanthropy.button.href}
              class="block truncate"
            >
              {frontmatter.philanthropy.button.text}
            </a>
          </Button>
        </div>
      </div>
    </section>

    {frontmatter.values && <Values data={frontmatter.values} />}

    {frontmatter.leadership && <Leadership data={frontmatter.leadership} />}

    {frontmatter.careers && <Careers data={frontmatter.careers} />}
  </main>

  <div class="mt-auto">
    <Cta />
    <Footer />
  </div>
</Layout>
