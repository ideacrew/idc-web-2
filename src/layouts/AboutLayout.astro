---
import { SITE } from "@config";
import { Image } from "astro:assets";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "./Layout.astro";
import Cta from "@components/Cta.astro";
import Careers from "@components/Careers.astro";

// Import images
import aboutUsImage from "@assets/images/about-us.svg";
import dataIcon from "@assets/images/data.svg";
import softwareIcon from "@assets/images/software.svg";
import cloudIcon from "@assets/images/cloud.svg";
import managementIcon from "@assets/images/management.svg";

// Create an icon map
const iconMap = {
  data: dataIcon,
  software: softwareIcon,
  cloud: cloudIcon,
  management: managementIcon,
};

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    about: {
      title: string;
      description: string;
      image: {
        src: string;
        alt: string;
      };
    };
    services: {
      name: string;
      icon: string;
      items: string[];
    }[];
    careers: {
      title: string;
      description: string;
      image: {
        src: string;
        alt: string;
      };
    };
  };
}

const { frontmatter } = Astro.props;
console.log("Frontmatter data:", frontmatter);
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header activeNav="about" />

  <Breadcrumbs />

  <section class="mt-16 w-full min-w-full">
    <div class="mx-auto w-full max-w-[916px] px-4 py-16">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
        <div class="col-span-2">
          <div
            class="mb-3 font-sans text-[18px] font-normal leading-[200%] text-[#0D2B46]"
          >
            <h2
              class="mb-6 font-domine text-[36px] font-normal leading-normal text-[#0D2B46]"
            >
              {frontmatter.about.title}
            </h2>

            <div
              class="font-sans text-[14px] font-normal leading-[200%] text-[#0D2B46]"
            >
              {frontmatter.about.description}
            </div>
          </div>
        </div>

        <div class="col-span-1 grid place-items-center">
          <Image
            src={aboutUsImage}
            alt={frontmatter.about.image.alt}
            width={300}
            height={192}
            loading="eager"
            priority
          />
        </div>
      </div>
    </div>
  </section>

  <section class="w-full min-w-full bg-[#F6F6F6]">
    <div class="mx-auto w-full max-w-[916px] px-4 py-8">
      <h2
        class="mb-8 font-domine text-[24px] font-normal leading-normal text-[#0D2B46]"
      >
        Our Services
      </h2>

      <div class="grid grid-cols-1 gap-8 sm:grid-cols-4">
        {
          frontmatter.services.map(service => (
            <div class="flex flex-col">
              <div class="mb-6 h-16 w-16">
                <Image
                  src={iconMap[service.icon]}
                  alt={`${service.name} Icon`}
                  width={64}
                  height={64}
                  class="h-full w-full"
                />
              </div>

              <h3 class="mb-4 font-sans text-[16px] font-semibold leading-[200%] text-[#0D2B46]">
                {service.name}
              </h3>
              <ul class="space-y-2 font-sans text-[14px] font-normal leading-[150%] text-[#0D2B46]">
                {service.items.map(item => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {frontmatter.careers && <Careers data={frontmatter.careers} />}

  <Cta />

  <Footer />
</Layout>
