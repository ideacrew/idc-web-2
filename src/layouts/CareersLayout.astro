---
import { SITE } from "@/config";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Layout from "./Layout.astro";
import { Image } from "astro:assets";

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    hero: {
      heading: string;
      description: string;
      image: {
        src: string;
        alt: string;
      };
    };
    benefits: {
      heading: string;
      items: {
        title: string;
        description: string;
      }[];
    };
    positions: {
      heading: string;
      items: {
        title: string;
        type: string;
        location: string;
        description: string;
        link: string;
      }[];
    };
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header />
  <Breadcrumbs />
  <main id="main-content">
    <section class="w-full min-w-full">
      <div class="mx-auto w-full max-w-[960px] px-4 py-16">
        <div class="mb-16 flex flex-col gap-8 md:flex-row">
          <div class="w-full md:w-1/2">
            <h1
              class="mb-6 font-domine text-[36px] font-normal leading-normal text-[#0D2B46]"
            >
              {frontmatter.hero.heading}
            </h1>
            <p class="text-[18px] leading-[200%] text-[#666]">
              {frontmatter.hero.description}
            </p>
          </div>
          <div class="w-full md:w-1/2">
            <div class="h-full w-full rounded-lg bg-muted p-2">
              <Image
                src={frontmatter.hero.image.src}
                alt={frontmatter.hero.image.alt}
                width={460}
                height={306}
                class="h-full w-full rounded-lg object-cover"
              />
            </div>
          </div>
        </div>

        <div class="mb-16">
          <h2 class="mb-8 font-domine text-[24px] font-normal text-[#0D2B46]">
            {frontmatter.benefits.heading}
          </h2>
          <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {
              frontmatter.benefits.items.map(benefit => (
                <div class="space-y-2">
                  <h3 class="font-bold text-[#0D2B46]">{benefit.title}</h3>
                  <p class="text-[#666]">{benefit.description}</p>
                </div>
              ))
            }
          </div>
        </div>

        <div>
          <h2 class="mb-8 font-domine text-[24px] font-normal text-[#0D2B46]">
            {frontmatter.positions.heading}
          </h2>
          <div class="space-y-6">
            {
              frontmatter.positions.items.map(position => (
                <div class="rounded-lg border border-gray-200 p-6">
                  <div class="mb-4 flex items-center justify-between">
                    <div>
                      <h3 class="font-bold text-[#0D2B46]">{position.title}</h3>
                      <p class="text-sm text-[#666]">
                        {position.type} Â· {position.location}
                      </p>
                    </div>
                    <a
                      href={position.link}
                      class="rounded-md bg-[#0D2B46] px-4 py-2 text-white hover:bg-[#0D2B46]/90"
                    >
                      Apply Now
                    </a>
                  </div>
                  <p class="text-[#666]">{position.description}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
