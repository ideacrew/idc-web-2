---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import placeholderImage from "../assets/images/about-us.svg";
import { Card, CardContent } from "@/components/ui/card";

interface Props {
  data: {
    title: string;
  };
}

const { data } = Astro.props;

// Dynamic image imports with type
const images = import.meta.glob<{ default: ImageMetadata }>(
  "../assets/images/leaders/*.{jpeg,jpg,png,gif}",
  { eager: true }
);

// Function with type safety
const getImageFromPath = (path: string): ImageMetadata => {
  const imagePath = path.replace(
    "/images/leaders/",
    "../assets/images/leaders/"
  );

  if (!images[imagePath]) {
    return placeholderImage;
  }

  return images[imagePath].default;
};

const leaders = await getCollection(
  "leaders",
  ({ data }) => data.active !== false
);
const sortedLeaders = leaders.sort(
  (a, b) => a.data.sortOrder - b.data.sortOrder
);
---

<section class="w-full min-w-full bg-[#F6F6F6]">
  <div class="mx-auto w-full max-w-[960px] px-4 py-8">
    <h2
      class="font-domine mb-8 text-[24px] leading-normal font-normal text-[#0D2B46]"
    >
      {data.title}
    </h2>

    <div class="mb-16 grid grid-cols-2 gap-6 sm:grid-cols-4">
      {
        sortedLeaders.map(leader => (
          <Card
            variant="leadership"
            className="group flex h-full flex-col overflow-hidden transition-all hover:-translate-y-1 hover:shadow-lg"
          >
            <a
              href={`/leaders/${leader.slug}`}
              class="block flex grow flex-col"
            >
              <div class="h-[232px] w-full p-3">
                <Image
                  src={getImageFromPath(leader.data.photo.src)}
                  alt={leader.data.photo.alt}
                  width={198}
                  height={232}
                  class="h-full w-full rounded-lg object-cover"
                />
              </div>
              <CardContent className="flex grow flex-col px-3 pb-2">
                <h3 class="mb-2 font-sans text-[16px] leading-normal font-semibold text-[#0D2B46]">
                  {leader.data.name}
                </h3>
                <p class="mb-2 font-sans text-[14px] leading-normal font-normal text-[#666]">
                  {leader.data.position}
                </p>
              </CardContent>
            </a>
            <div class="mt-auto px-3 pb-3">
              <hr class="my-2 border-gray-300" />
              <div class="inline-flex items-center text-[#007BB6]">
                <svg
                  class="h-5 w-5"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
              </div>
            </div>
          </Card>
        ))
      }
    </div>
  </div>
</section>
