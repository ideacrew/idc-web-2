---
// Pure HTML form for Netlify - no React components needed
---

<form
  class="space-y-6"
  name="contact-form"
  action="/thank-you"
  netlify-honeypot="website-name"
  netlify
  {...{} as any}
>
  <input
    type="hidden"
    name="subject"
    value="Contact Form Submission (%{submissionId})"
  />

  <div class="input-group stanky">
    <label
      for="website-name"
      class="mb-2 block text-sm font-medium text-gray-700"
    >
      What is your website name?
    </label>
    <input
      type="text"
      name="website-name"
      id="website-name"
      class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
    />
  </div>

  <div class="space-y-2">
    <label
      for="contact-name"
      class="mb-2 block text-sm font-medium text-gray-700"
    >
      Your Name
    </label>
    <input
      id="contact-name"
      name="contact-name"
      placeholder="John Smith"
      required
      type="text"
      class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
    />
  </div>

  <div class="space-y-2">
    <label
      for="contact-email"
      class="mb-2 block text-sm font-medium text-gray-700"
    >
      Your Email
    </label>
    <input
      id="contact-email"
      name="contact-email"
      type="email"
      inputmode="email"
      placeholder="john@example.com"
      required
      class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
    />
  </div>

  <div class="space-y-2">
    <label
      for="contact-company"
      class="mb-2 block text-sm font-medium text-gray-700"
    >
      Your Company
    </label>
    <input
      id="contact-company"
      name="contact-company"
      placeholder="Company Name"
      type="text"
      class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
    />
  </div>

  <div class="space-y-2">
    <label
      for="contact-message"
      class="mb-2 block text-sm font-medium text-gray-700"
    >
      Let us know what you're looking for and how we can help
    </label>
    <textarea
      id="contact-message"
      name="contact-message"
      placeholder="Type your message here..."
      rows="6"
      required
      class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
    ></textarea>
  </div>

  <button
    type="submit"
    class="w-full rounded-md bg-blue-600 px-4 py-2 text-white transition-colors hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:outline-none"
  >
    Send Message
  </button>
</form>
